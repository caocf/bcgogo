		  <id>bcgogo-repo</id>
		  <name>bcgogo repository</name>
		  <url>http://61.177.55.242:18080/artifactory/bcgogo-repo</url>
		  <!--<url>http://122.193.109.138:18080/artifactory/bcgogo-repo/</url> -->

		  <releases>
			<enabled>true</enabled>
		  </releases>
		  <snapshots>
